<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_heart</item>
        <item name="colorPrimaryVariant">@color/perano</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fun_green</item>
        <item name="colorSecondaryVariant">@color/aquamarine</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background brand color -->
        <item name="android:colorBackground">@color/wild_sand</item>
        <item name="colorOnBackground">@color/baltic_sea</item>
        <!-- Surface brand color-->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/baltic_sea</item>
        <item name="colorOnSurfaceMediumBrush">@color/baltic_sea_60</item>
        <item name="colorOnSurfaceLowBrush">@color/baltic_sea_38</item>
        <item name="colorOnSurfaceDraggedBrush">@color/baltic_sea_16</item>
        <!-- Error brand color-->
        <item name="colorError">@color/brink_pink</item>
        <item name="colorOnError">@color/white</item>
    </style>
</resources>